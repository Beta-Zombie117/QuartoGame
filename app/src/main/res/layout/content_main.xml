<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:id="@+id/topMenu"
        android:background="@android:color/holo_orange_light"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints"
        android:weightSum="1">

        <Button
            android:id="@+id/button_new_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="New Game"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Select Difficulty"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,InefficientWeight" />

        <Spinner
            android:id="@+id/spinnerSelectDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_weight="0.75" />

        <LinearLayout
            android:id="@+id/textviewsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_turn"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Turn :"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewdisplayTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,InefficientWeight" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/LayoutBoard"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_light"
            android:elevation="0dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:orientation="vertical"
            tools:ignore="PxUsage,UnusedAttribute"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutSelectedFigure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_light"
            android:elevation="0dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:orientation="horizontal"
            tools:ignore="PxUsage,UnusedAttribute"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded,UselessParent">

                <Button
                    android:id="@+id/btCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@android:color/holo_red_light"
                    android:text="Cancel"
                    tools:clickable="true"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@android:color/holo_green_dark"
                    android:text="Confirm"
                    tools:clickable="true"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutFigures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/holo_red_light"
            android:elevation="0dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:orientation="vertical"
            tools:ignore="PxUsage,UnusedAttribute"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        </LinearLayout>



    </LinearLayout>



</android.support.constraint.ConstraintLayout>
